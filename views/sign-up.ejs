<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="UTF-8">
    <meta http-equiv="X-UA-Compatible" content="IE=edge">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <title>Safe Store</title>
    <link rel="stylesheet" href="/styling/global.css">
    <link rel="stylesheet" href="/styling/pre-login-forms.css">
</head>
<body>
    <div class="main-content">
        <div class="paper-stack-form">
            <form>
                <div class="form-header">
                    <h1 class="form-heading">Safe Store</h1>
                    <p class="page-indication">sign up</p>
                </div>
                <div class="form-body">
                    <%- include("partials/form-fields") %>
                </div>
                <div class="form-footer">
                    <button>Sign Up</button>
                    <span> | </span>
                    <a href="/api/login">Back to Login</a>
                </div>
            </form>
        </div>
    </div>

<script>
    const form = document.querySelector("form");

    // error fields
    let emailError = document.querySelector(".email-error");
    let passwordError = document.querySelector(".password-error");

    form.addEventListener("submit", async function(event) {
        event.preventDefault();

        // reset error fields
        emailError.textContent = "";
        passwordError.textContent = "";

        // form field values
        let email = form.email.value;
        let password = form.password.value;

        try {
            let response = await fetch("/api/sign-up/users", {
                method: "POST",
                body: JSON.stringify({ email, password }),
                headers: { "Content-Type": "application/json" }
            });

            let data = await response.json();
            
            if(data.errorMessages) {
                renderErrors(data.errorMessages);
            }

            if(data.user) {
                redirect();
            }
        } catch (err) {
            console.log(err);
        }
    });

    // renders errors to user
    function renderErrors(errors) {
        emailError.textContent = errors.email;
        passwordError.textContent = errors.password;
    }

    // redirects user
    function redirect() {
        location.assign("/api/login");
    }
</script>
<%- include("partials/footer") %>